#include <stdlib.h>
#include <unistd.h>

int	ft_ultimate_range(int **range, int min, int max)
{
	int	i;
	int	exit;

	exit = 2;
	if (min >= max)
	{
		exit = 0;
		*range = NULL;
	}
	*range = malloc((max - min) * sizeof(int));
	if (*range == NULL)
	{
		exit = (-1);
	}
	i = 0;
	while (min < max)
	{
		(*range)[i++] = min++;
	}
	if (exit == 2)
		exit = i;
	return (exit);
}

